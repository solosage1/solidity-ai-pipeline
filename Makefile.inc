bootstrap-solai:
	pipx ensurepath
	@if command -v solai >/dev/null; then \
	    pipx upgrade solai --include-deps || true; \
	else \
	    pipx install --include-deps solai[ai]; \
	fi
	# Ensure SWE-Agent & SWE-ReX are present in the same venv
