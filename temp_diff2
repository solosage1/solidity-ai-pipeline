+def _run(cmd, cwd, log):
+    """Run cmd streaming to console & optional log."""
+    p = subprocess.Popen(cmd, cwd=cwd, text=True,
+                         stdout=subprocess.PIPE, stderr=subprocess.STDOUT)
+    for line in p.stdout:
+        print(line, end="")
+        if log: log.write(line)
+    p.wait()
